<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="org.sheshant.messenger.model.Profile" table="PROFILE">
      <meta attribute="class-description">
         This class contains the message details. 
      </meta>
      <id name="id" type="long" column="ID"/>
      <property name="profileName" column="PROFILE_NAME" type="string"/>
      <property name="firstName" column="FIRST_NAME" type="string"/>
      <property name="lastName" column="LAST_NAME" type="string"/>
      <property name="created" column="CREATED" type="date"/>
   </class>
</hibernate-mapping>